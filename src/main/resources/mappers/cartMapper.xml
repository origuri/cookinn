<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="storeMapper">
    <!--내가 고른 품목 확인-->
    <select id="selectCartList" parameterType="java.lang.Long" resultType="CartDto">
        SELECT  *
        FROM    cart
        WHERE   member_id = #{memberId}
    </select>

    <!--장바구니에 물품 등록-->
    <insert id="insertCartByCartInsertDto" parameterType="CartInsertDto">
        INSERT INTO cart(member_id, item_id, count, cart_price, created_time)
        VALUES (#{memberId}, #{itemId}, #{count})
    </insert>
</mapper>